[init]
  defaultBranch = main

[pull]
  rebase = true

[push]
  default = simple
  followTags = true

[core]
  editor = nvim
  autocrlf = false
  filemode = true
  precomposeUnicode = true
  trustctime = false

[diff]
  tool = meld
  algorithm = patience
  renames = copies
  mnemonicPrefix = true

[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

[merge]
  tool = meld
  conflictstyle = diff3
  keepBackup = false

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "meld"]
  cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
  trustExitCode = true
[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = red
  untracked = cyan

[help]
  autocorrect = 1

[status]
  showUntrackedFiles = all
  submoduleSummary = true

[log]
  date = relative
  decorate = short

[rerere]
  enabled = true

# Conventional commits support (for future use)
[commit]
  template = ~/.gitmessage

# Git hooks setup (for future integration)
[core]
  hooksPath = ~/.githooks
